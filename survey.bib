	year = {2014},
	keywords = {{GPS} data, Global Positioning System, Global Positioning Systems, Logic gates, {XML}, behavioural sciences computing, fine-grained spatial quantizations, high predictability upper bound, human mobility predictability, human movement trajectories, quantisation (signal), spatiotemporal granularity, temporal quantization, topological constraints},
	pages = {88--94}
}

@article{treurniet_taxonomy_2014,
