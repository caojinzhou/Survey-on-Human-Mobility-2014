	booktitle = {Proceedings of the 20th Annual International Conference on Mobile Computing and Networking},
	publisher = {{ACM}},
	author = {Zhang, Desheng and Huang, Jun and Li, Ye and Zhang, Fan and Xu, Chengzhong and He, Tian},
