	journal = {Pervasive and Mobile Computing},
	author = {Karamshuk, Dmytro and Boldrini, Chiara and Conti, Marco and Passarella, Andrea},
	month = apr,
	year = {2014},
	keywords = {Complex networks, Human mobility, Opportunistic networks, Stochastic processes},
	pages = {19--40}
}

@article{lin_towards_2013,
