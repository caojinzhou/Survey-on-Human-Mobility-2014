	author = {Lin, Xingqin and Ganti, R.K. and Fleming, P.J. and Andrews, J.G.},
	month = apr,
	year = {2013},
	keywords = {Analytical models, {BS}, Handover, Humans, Mobile communication, Mobility models, Poisson-Voronoi model, Poisson-Voronoi tessellation, {RWP}, Stochastic processes, Switches, base station, cellular network parameter, cellular networks, cellular radio, computational geometry, deterministic model, handover, handover rate, hexagonal model, mobility management (mobile radio), random processes, random waypoint mobility model, sojourn time, stochastic processes, stochastic property, synthetic truncated Levy walk model},
	pages = {1686--1698}
}

@inproceedings{zhang_exploring_2014,
