	author = {McInerney, James and Rogers, Alex and Jennings, Nicholas R.},
	year = {2012},
	keywords = {knowledge representation and reasoning::geometric, machine learning::data mining, machine learning::machine learning (general/other, machine learning::unsupervised learning, reasoning under uncertainty::uncertainty in {AI} (general/other), spatial and temporal reasoning},
	pages = {906--910}
}

